---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import createSlug from "../lib/createSlug"


const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1 text-success">&gt Hola Mundo_</div>
    
    <div class="text-5xl font-rubik font-bold">Soy David Mora,</div>
    
    <div class="text-3xl py-3 font-rubik font-bold">Desarrollador de Software</div>
    
    <div class="py-2">
      <text class="text-lg">
        Desarrollador con experiencia en el desarrollo de aplicaciones móviles y web. Tengo sólidos conocimientos en Frontend, Backend, administración de servidores y Bases de Datos.
      </text>
    </div>

