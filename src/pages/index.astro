---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import createSlug from "../lib/createSlug"


const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1 text-success">&gt Hello World_</div>
    
    <div class="text-5xl font-rubik font-bold">I'm David Mora,</div>
    
    <div class="text-3xl py-3 font-rubik font-bold">Software Developer</div>
    
    <div class="py-2">
      <text class="text-lg">
        Software developer with experience in mobile and web application development. I have solid knowledge in Frontend, Backend, server administration and Databases.
      </text>
    </div>

